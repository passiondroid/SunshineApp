<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <View
        android:layout_above="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/gradient"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="@color/white"/>

    <View
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hour"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:elevation="5dp"
            android:text="16"
            android:textSize="25sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grey"
            android:gravity="center"
            android:background="@drawable/circle"/>

        <TextView
            android:id="@+id/minute"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:elevation="5dp"
            android:text="04"
            android:textSize="25sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grey"
            android:gravity="center"
            android:background="@drawable/circle"/>

        <TextView
            android:id="@+id/second"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="5dp"
            android:text="53"
            android:textSize="25sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grey"
            android:gravity="center"
            android:background="@drawable/circle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeLayout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/batteryTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        android:text="49%"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_battery"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/date_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July 10, 2016"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/grey"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/weather_icon"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_above="@+id/timeLayout"
        android:src="@drawable/icon_02d"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="32&#xb0;"
        android:id="@+id/maxTV"
        android:layout_alignBottom="@+id/weather_icon"
        android:layout_toEndOf="@+id/weather_icon"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="25&#xb0;"
        android:id="@+id/minTV"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@+id/weather_icon"
        android:layout_toEndOf="@+id/maxTV" />

</RelativeLayout>

